<h1>Lista produktów (<%= products.length %>)</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nazwa</th>
      <th>Opis</th>
      <th>Cena</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td><%= p.description %></td>
        <td><%= p.price %> zł</td>
        <td>
          <button onclick="edit('<%= p.id %>')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
              <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
            </svg>
          </button>
        </td>
        <td>
          <button onclick="del('<%= p.id %>')" class="secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
              <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
            </svg>
          </button>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<% products.forEach(p => { %>
  <dialog id="edit-<%= p.id %>">
    <article>
      <header>
        <button class="close" onclick="this.closest('dialog').close()"></button>
        <h4>Edytuj produkt</h4>
      </header>

      <form method="POST" action="/admin/products/<%= p.id %>/edit">
        <label>
          Nazwa
          <input type="text" name="newName" value="<%= p.name %>" required>
        </label>

        <label>
          Opis
          <textarea name="newDesc"><%= p.description %></textarea>
        </label>

        <label>
          Cena
          <input
            type="number" step="0.01" name="newPrice"
            min="0" value="<%= p.price %>" required>
        </label>

        <footer>
          <button type="submit">Zapisz</button>
        </footer>
      </form>
    </article>
  </dialog>
<% }) %>

<% products.forEach(p => { %>
  <dialog id="del-<%= p.id %>">
    <article>
      <header>
        <button class="close" onclick="this.closest('dialog').close()"></button>
        <h4>Usuń produkt</h4>
      </header>

      <form method="POST" action="/admin/products/<%= p.id %>/delete">
        <p>
          Czy na pewno chcesz usunąć produkt:
          <br>
          <strong><%= p.name %></strong>?
        </p>

        <footer style="display: flex; gap: 1rem; justify-content: flex-end;">
          <button type="button" class="secondary"
                  onclick="this.closest('dialog').close()"
                  style="width: 20%;">
            Anuluj
          </button>

          <button type="submit" style="background-color: red; width: 20%;">
            Usuń
          </button>
        </footer>
      </form>
    </article>
  </dialog>
<% }) %>


<script>
  function edit(productId) {
    const dialog = document.getElementById(`edit-${productId}`);

    if (!dialog) {
      console.error('Produkt nie ma modala edit:', productId);
      return;
    }

    dialog.showModal();
  }

  function del(productId) {
    const dialog = document.getElementById(`del-${productId}`);

    if (!dialog) {
      console.error('Produkt nie ma modala del:', productId);
      return;
    }

    dialog.showModal();
  }
</script>
