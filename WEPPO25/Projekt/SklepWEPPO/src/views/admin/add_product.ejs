<% if (typeof productStatus !== 'undefined') { %>
  <article style="background-color: darkgreen;">
    <p>Dodano <b><%= productStatus %></b>.</p>
  </article>
<% } %>

</article>

<form method="POST" action="/admin/add_product">
  <label>
    Nazwa
    <input name="name" placeholder="Nazwa produktu..." required>
  </label>
    <label>
    Opis
    <textarea name="description" placeholder="Opis produktu..." required></textarea>
  </label>
  <label>
    Cena
    <input name="price" type="number" min="0" step="0.01" placeholder="Cena produktu..." required>
  </label>
  <button>Dodaj</button>
</form>
